<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".activity.MainActivity">
    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#6B9853"
            app:navigationIcon="@drawable/left"
            android:onClick="back"
            android:id="@+id/toolBar">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:text="Hello World!"
                  android:layout_gravity="center"
                  android:gravity="center"/>
    </androidx.appcompat.widget.Toolbar>
    <ScrollView android:layout_width="match_parent"
                android:layout_height="wrap_content">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="#86E8E2"
                    app:title="标题"
                    app:subtitle="子标题"
                    app:titleMarginStart="90dp"
                    app:navigationIcon="@drawable/left"
                    app:titleTextColor="#ff0000"
                    android:onClick="back"/>
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Hello World!"
                      android:id="@+id/text"/>
            <Button android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewStart"
                    android:text="@string/to_sdcard"
                    android:onClick="toSdcard"/>

            <Button android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewStart"
                    android:text="@string/to_login"
                    android:onClick="toLogin"/>

            <Button android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewStart"
                    android:text="@string/to_call"
                    android:onClick="toCall"/>

            <Button android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewStart"
                    android:text="@string/to_popup_window"
                    android:onClick="toPopupWindow"/>

            <Button android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewStart"
                    android:text="@string/to_dialog"
                    android:onClick="toDialog"/>

            <Button android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewStart"
                    android:text="@string/to_handler"
                    android:onClick="toHandler"/>

            <Button android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewStart"
                    android:text="@string/to_notice"
                    android:onClick="toNotice"/>

            <Button android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewStart"
                    android:text="@string/to_button"
                    android:onClick="toButton"/>

            <Button android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewStart"
                    android:text="@string/intentDemo"
                    android:onClick="intentDemo"/>

            <Button android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewStart"
                    android:text="@string/to_change_ui_activity"
                    android:onClick="toChangeUI"/>

            <Button android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewStart"
                    android:text="@string/to_time_picker_activity"
                    android:onClick="toTimePicker"/>

            <Button android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewStart"
                    android:text="@string/to_radio_activity"
                    android:onClick="toRadio"/>

            <Button android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewStart"
                    android:text="@string/to_progress_bar_activity"
                    android:onClick="toProgressBar"/>

            <Button android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewStart"
                    android:text="@string/to_image_activity"
                    android:onClick="toImage"/>

            <Button android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewStart"
                    android:text="@string/to_check_box_activity"
                    android:onClick="toCheckBox"/>

            <Button android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewStart"
                    android:text="@string/to_live_demo_activity"
                    android:onClick="toLiveDemo"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>